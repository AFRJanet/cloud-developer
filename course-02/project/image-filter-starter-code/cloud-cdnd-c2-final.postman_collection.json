				{
					"name": "{{host}}/api/v0/users/auth/register",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {\r",
									"    pm.response.to.have.status(200);\r",
									"});\r",
									"\r",
									"pm.test(\"Response data is equal to input data\", function () {\r",
									"    const responseJson = pm.response.json();\r",
									"    pm.expect(responseJson.username).to.eql(\"JohnDoe\");\r",
									"    pm.expect(responseJson.email).to.eql(\"jondoe@arcor.de\");\r",
									"});\r",
									"\r",
									"pm.test(\"Request password is not available\", function () {\r",
									"    const responseJson = pm.response.json();\r",
									"    pm.expect(responseJson).not.have.property('password');\r",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
